# AWS DocumentDB Configuration
DB_HOST=your-documentdb-cluster.cluster-xxxxxxxxx.us-east-1.docdb.amazonaws.com
DB_PORT=27017
DB_NAME=products_db
DB_USERNAME=your_username
DB_PASSWORD=your_password
COLLECTION_NAME=products

# SSL Configuration (recommended for AWS DocumentDB)
USE_SSL=true
SSL_CA_CERT_PATH=/path/to/rds-ca-2019-root.pem

# Connection Pool Settings
MAX_POOL_SIZE=10
MIN_POOL_SIZE=1
CONNECTION_TIMEOUT=30000

# MCP Server Configuration
SERVER_HOST=localhost
SERVER_PORT=8000
SERVER_NAME=products-mcp
SERVER_VERSION=1.0.0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=

# Application Settings
DEBUG=false
MAX_RESULTS=100
